<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="16sp"
                android:text="一、登录、修改密码问题"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1、如何修改密码？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_pass"
                android:textColor="@color/text_color8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2、收不到验证码？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/why_verifyCode"
                android:textColor="@color/text_color8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3、可以在电脑上登录吗？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pc_login"
                android:textColor="@color/text_color8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="二、功能问题"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1、如何给孩子绑定多个家长？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent_more"
                android:textColor="@color/text_color8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2、如何找到老师的联系方式？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teacher_phone"
                android:textColor="@color/text_color8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3、如何查看孩子当天的作业？"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_color6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/child_homework"
                android:textColor="@color/text_color8" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>