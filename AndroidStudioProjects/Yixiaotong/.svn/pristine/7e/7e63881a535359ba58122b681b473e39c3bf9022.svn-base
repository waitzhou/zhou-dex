<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius6_white"
    android:gravity="center"
    android:layout_marginLeft="33dp"
    android:layout_marginRight="33dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/img_check_update" />

    <TextView
        android:id="@+id/update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color5"
        android:textSize="16sp"
        tools:text="发现新版本 v2.0.1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:text="@string/feedback_hint"
            android:textColor="@color/text_color5"
            android:textSize="12sp">
        </TextView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/line_choose_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_update_cancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radius_15_gray_bule"
            android:focusable="true"
            android:gravity="center"
            android:text="取消"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/tv_update_now"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/radius_15_gray_bule"
            android:focusable="true"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
