<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius6_white"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="@dimen/elevation_height"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/item_tv_class"
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/item_tv_date"
        android:lines="1"
        android:ellipsize="end"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color9"
        android:textSize="12sp"
        android:text="余杭区大禹小学一年级二班 陈安之"/>

    <TextView
        android:id="@+id/item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_color9"
        android:textSize="12sp"
        android:text="2018年11月6日"/>

    <View
        android:id="@+id/item_view_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line"
        android:layout_below="@id/item_tv_class"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_holder">

        <ImageView
            android:id="@+id/item_iv_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_notice_warn"/>

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_iv_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/text_color5"
            android:textStyle="bold"
            android:text="明天下午开家长会"/>

        <TextView
            android:id="@+id/item_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_tv_title"
            android:layout_below="@id/item_tv_title"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_color9"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="8dp"
            android:text="明天下午开家长，希望各位父母务必参加，不参加者请在校讯通里请假。不…"/>

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_tv_title"
            android:layout_below="@id/item_tv_desc"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_color9"
            android:text="2018年11月6日 14:23:30"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/item_tv_query_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_tv_title"
            android:layout_below="@id/item_tv_time"

            android:layout_marginBottom="15dp"
            android:textColor="@color/theme_center_color"
            android:text="点击查看详情 >"/>

    </RelativeLayout>

</RelativeLayout>