<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.scwang.wave.MultiWaveHeader
            android:id="@+id/waveHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mwhVelocity="2"
            app:mwhProgress="1"
            app:mwhGradientAngle="0"
            app:mwhColorAlpha="0.45"
            app:mwhStartColor="#ff0e7ef5"
            app:mwhCloseColor="#ff695efd"
            app:mwhWaves="MultiWave"/>

        <TextView
            android:id="@+id/iv_back"
            android:paddingLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/tv_back"/>
        <ImageView
            android:id="@+id/img_maozi"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_maozi"/>
        <ImageView
            android:id="@+id/school"
            android:layout_below="@+id/img_maozi"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_login_school"/>
        <ImageView
            android:layout_below="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_login_smart"/>

    </RelativeLayout>


    <RelativeLayout
        android:paddingTop="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:hint="请输入电话号码"
            android:textColor="#ff333333"
            android:textColorHint="#ffbbbbbb"
            android:textSize="15sp"
            android:lines="1"
            android:maxLength="11"
            android:drawableLeft="@mipmap/ic_phone"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:background="@null" />
        <View
            android:id="@+id/v1"
            android:layout_below="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff0e7ef5"/>
        <EditText
            android:id="@+id/edit_pas"
            android:layout_below="@+id/edit_phone"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:hint="请输入密码"
            android:textColor="#ff333333"
            android:textColorHint="#ffbbbbbb"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/ic_login_pas"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:background="@null"/>
        <View
            android:id="@+id/v2"
            android:layout_below="@+id/edit_pas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff0e7ef5"/>
        <Button
            android:layout_below="@+id/v2"
            android:id="@+id/but_enter"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/login_button_bg"
            android:layout_marginBottom="50dp"
            android:text="登 录"
            android:textColor="@color/login_button_enter"
            android:textSize="15sp" />
        <TextView
            android:layout_below="@+id/but_enter"
            android:id="@+id/text_forget"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="忘记密码"
            android:textColor="#ff0e7ef5"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>