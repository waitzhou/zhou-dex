<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="57dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="56dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp">

        <ImageView
            android:id="@+id/item_inner_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_user_placeholder"/>

        <TextView
            android:id="@+id/item_inner_teacher_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="22dp"
            android:text="语文老师"
            android:textColor="@color/theme_center_color"/>

        <TextView
            android:id="@+id/item_inner_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:text="赵丽颖"/>

        <TextView
            android:id="@+id/item_inner_tag"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_marginStart="18dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="班主任"
            android:gravity="center"
            android:background="@drawable/bg_radius8_blue"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/bg_color"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"/>

</LinearLayout>
