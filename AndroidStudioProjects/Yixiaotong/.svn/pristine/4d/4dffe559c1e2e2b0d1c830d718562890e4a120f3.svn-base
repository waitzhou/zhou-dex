<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_theme">
        <TextView
            android:id="@+id/tv_back"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/tv_back"/>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_back"
            android:textColor="#ffffffff"
            android:textSize="27sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name"
            android:layout_marginTop="10dp"
            android:text="个人详细资料"
            android:textColor="#ffffffff"
            android:layout_marginLeft="27dp"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_user_placeholder"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/linearLayout_item">
                <TextView
                    android:text="性别"
                    style="@style/child_text"/>
                <TextView
                    android:id="@+id/text_sex"
                    android:textColor="#ff999999"
                    style="@style/child_text"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                style="@style/linearLayout_item">
                <TextView
                    android:text="生日"
                    style="@style/child_text"/>
                <TextView
                    android:id="@+id/text_birthday"
                    android:textColor="#ff999999"
                    style="@style/child_text"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                style="@style/linearLayout_item">
                <TextView
                    android:text="学校"
                    style="@style/child_text"/>
                <TextView
                    android:id="@+id/text_school"
                    android:textColor="#ff999999"
                    style="@style/child_text"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                style="@style/linearLayout_item">
                <TextView
                    android:text="班级"
                   style="@style/child_text"/>
                <TextView
                    android:id="@+id/text_class"
                    style="@style/child_text"
                    android:textColor="#ff999999"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_device"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                style="@style/linearLayout_item"
                android:gravity="center_vertical">
                <TextView
                   style="@style/child_text"
                    android:text="校徽电量"/>
                <TextView
                    android:id="@+id/text_power"
                   style="@style/child_text"
                    android:textColor="@color/mine_green_red"
                    android:layout_marginLeft="20dp"
                    android:text="50%"/>
               <com.zhexinit.yixiaotong.widget.Power
                   android:id="@+id/power"
                   android:layout_marginStart="8dp"
                   android:layout_width="30dp"
                   android:layout_height="12dp" />
                <TextView
                    android:id="@+id/text_power_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/mine_green_red"/>
            </LinearLayout>

           <TextView
               android:id="@+id/text_no_bound"
               android:visibility="gone"
               android:layout_marginTop="10dp"
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="54dp"
               android:textColor="#0E7EF5"
               android:textSize="14sp"
               android:gravity="center"
               android:text="没有绑定校徽，请联系学校绑定"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line_save_power"
                android:layout_marginTop="1dp"
                style="@style/linearLayout_item">
                <TextView
                    style="@style/child_text"
                    android:text="省电模式"/>
                <TextView
                    android:id="@+id/text_power_saving"
                    style="@style/child_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/login_text_power"
                    android:layout_marginLeft="20dp"
                    android:text="未开启 开启可节省电量"
                    android:drawableRight="@drawable/bg_power_on_off"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/line_safe"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                style="@style/linearLayout_item">
                <TextView
                    style="@style/child_text"
                    android:text="安全区域"/>
                <TextView
                    android:id="@+id/text_safe"
                    style="@style/child_text"
                    android:textColor="#ff999999"
                    android:layout_marginLeft="20dp"
                    android:text="未设置"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/ic_next"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_parent_manager"
                android:layout_marginTop="10dp"
                style="@style/linearLayout_item">
                <TextView
                    style="@style/child_text"
                    android:text="家长管理"/>
                <TextView
                    android:id="@+id/text_parents"
                    style="@style/child_text"
                    android:textColor="#ff999999"
                    android:layout_marginLeft="20dp"
                    android:text="未添加"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/ic_next"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_add_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                style="@style/linearLayout_item"
                android:gravity="center">
            <TextView
                android:id="@+id/text_add"
                style="@style/child_text"
                android:textColor="#0E7EF5"
                android:text="@string/tv_add"/>
            <TextView
                style="@style/child_text"
                android:textColor="#0E7EF5"
                android:layout_marginLeft="12dp"
                android:text="添加家长" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/line_unBundle"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                style="@style/linearLayout_item"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_unBundle"
                    style="@style/child_text"
                    android:textColor="@color/text_red"
                    android:text="@string/tv_unBundle"/>
                <TextView
                    style="@style/child_text"
                    android:textColor="@color/text_red"
                    android:layout_marginLeft="12dp"
                    android:text="解除绑定" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>