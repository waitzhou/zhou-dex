<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_line"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="请假人："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_apply_man"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="请假类型："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_apply_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="开始时间："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="结束时间："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reason_holder"
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="请假理由："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_reason_holder"
                    android:layout_weight="1"
                    android:paddingTop="17dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="5dp"
                    android:minHeight="53dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingBottom="20dp"
                    tools:text="143214414321432141242341442314321423142142142142314211143214414321432141242341442314321423142142142142314211"
                    android:textColor="@color/text_color" />

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_alignLeft="@id/tv_reason"
                    android:layout_below="@id/tv_reason"
                    android:layout_marginBottom="20dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="审批："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_manage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

            <View
                android:id="@+id/line_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/ll_refuse_reason"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:hint="拒绝理由："
                    android:paddingLeft="22dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_refuse_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    tools:text="143214414321"
                    android:textColor="@color/text_color" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>