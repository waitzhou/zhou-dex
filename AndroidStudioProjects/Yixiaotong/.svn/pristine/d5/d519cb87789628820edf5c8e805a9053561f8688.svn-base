<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="#ff999999"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/text_phone"
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1584394345"
            android:textColor="#ff999999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="#ff999999"
            android:textSize="14sp" />
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/edit_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:layout_height="wrap_content"
            android:textColor="#ff555555"
            android:textSize="14sp"
            android:inputType="number"
            android:maxLength="6"
            android:background="@null"/>
        <TextView
            android:id="@+id/text_send_sms"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:background="@drawable/radius_15_gray_bule"
            android:text="获取验证码"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#ff999999"
            android:textSize="14sp" />
        <com.zhexinit.yixiaotong.widget.NoPasteEditText
            android:id="@+id/edit_pas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ff555555"
            android:textSize="14sp"
            android:maxLength="16"
            android:layout_marginStart="14dp"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码 "
            android:textColor="#ff999999"
            android:textSize="14sp" />
        <com.zhexinit.yixiaotong.widget.NoPasteEditText
            android:id="@+id/edit_sure_pas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ff555555"
            android:textSize="14sp"
            android:layout_marginStart="14dp"
            android:inputType="textPassword"
            android:maxLength="16"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>