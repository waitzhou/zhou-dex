<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年11月6日 星期三"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/text_color9"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:background="@drawable/bg_radius6_white"
        android:elevation="1dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="到校提醒"
            android:textColor="@color/text_color5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/item_tv_title"
            android:background="@drawable/bg_radius8_green"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="正常"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_tv_title"
            android:layout_below="@+id/item_tv_title"
            android:layout_marginTop="8dp"
            android:text="程玉琦 8：20 到校打卡成功"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>