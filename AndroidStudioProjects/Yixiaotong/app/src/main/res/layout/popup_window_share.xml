<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_share_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share_wechat"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/text_color5"
            android:text="微信" />

        <TextView
            android:id="@+id/tv_share_wxcircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share_wxcircle"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/text_color5"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share_qq"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/text_color5"
            android:text="QQ" />

        <TextView
            android:id="@+id/tv_share_qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share_qzone"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/text_color5"
            android:text="QQ空间" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_line"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/theme_center_color"
        android:gravity="center"
        android:text="取消分享"/>

</LinearLayout>